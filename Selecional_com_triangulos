programa
{
	
	funcao inicio()
	{
	//Questão dos Triângulos
	inicioPrograma()
	
	inteiro a, b, c
	
	escreva("Digite três valores: \n")
	leia(a, b, c)
	
	se(a<b+c e b<a+c e c<b+a){
		se(a==b e b==c){
			escreva("Triângulo equilátero.") 
		}
		senao se(a==b ou a==c ou b==c){
			escreva("Triângulo Isósceles.")
		}
		senao{
			escreva("Triângulo escaleno.")
		}
	}
	senao{
		escreva("Não é possível formar um triângulo com os valores fornecidos.")
	}
	fimPrograma()
	}
	funcao pulaLinha(){
		escreva("\n")
	}
	funcao inicioPrograma(){
		escreva("--- Início do Programa ---")
		escreva("\n\n\n")
	}
	funcao fimPrograma(){
		escreva("\n\n")
		escreva("--- Fim do Programa ---")
	}
	
}
